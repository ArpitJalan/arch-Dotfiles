Config {
      font = "-misc-fixed-*-*-*-*-10-*-*-*-*-*-*-*"
    , bgColor = "black"
    , fgColor = "white"
    , position = Static
        {
          xpos = 1680
        , ypos = 0
        , width = 1024
        , height = 16
        }
    , lowerOnStart = True
    , commands =
        [
          Run Com "uname" ["-s","-r"] "" 36000 -- 1h
        , Run Uptime ["-t","Uptime: <days>d <hours>h <minutes>m <seconds>s"] 10 -- 1s
        , Run Memory ["-t","Ram: <usedratio>%"] 10 -- 1s
        , Run Cpu ["-L","3","-H","75","--high","red"] 10 -- 1s
        , Run Network "eth0" ["-t","Network: <rx> kB/s | <tx> kB/s"] 10 -- 1s
        , Run Weather "EVRA" ["-t","<tempC>C, <skyCondition> (Riga Airport)"] 6000 -- 10m
        , Run Date "%d/%m/%y, %H:%M:%S" "date" 10 -- 1s
        ]
    , sepChar = "%"
    , alignSep = "}{"
    , template = "%uname% (Arch Linux)    %uptime%    %memory%    %cpu%    %eth0% }{ %EVRA%    %date%"
    , border = FullBM(0)
    , borderColor = "black"
}
